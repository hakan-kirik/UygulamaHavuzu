@model WeatherModels
@{
    Layout = null;
}

<div class="card p-4">

    <div class="d-flex">
        <h6 class="flex-grow-1">@Model.Name</h6>
        <h6>@Model.Sys.Country</h6>
    </div>

    <div class="d-flex flex-column temp mt-5 mb-3">
        <h1 class="mb-0 font-weight-bold" id="heading"> @Math.Round(Model.Main.Temp)&deg; C</h1>
        <span class="small grey">@Model.Weather[0].Description</span>
    </div>

    <div class="d-flex">
        <div class="temp-details flex-grow-1">
            <p class="my-1">
                <img src="https://i.imgur.com/B9kqOzp.png" height="17px">

                <span> @Model.Wind.Speed m/s</span>
            </p>

            <p class="my-1">
                <i class="fa fa-tint mr-2" aria-hidden="true"></i>
                <span> @Model.Main.Humidity% </span>
            </p>

            <p class="my-1">
                <img src="https://i.imgur.com/wGSJ8C5.png" height="17px">
                <span>@Model.Sys.sunsetTime </span>


            </p>
        </div>

        <div>
            <img src="~/img/@Model.Weather[0].Icon+.png" width="100px">
        </div>


    </div>


</div>